@page
@model AspnCrudDapper.Pages.Funcionario.EditModel
@{
    ViewData["Title"] = "Editar Funcionário";
}
<div>
    <div>
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title"><strong>Editar Funcionário</strong></h3>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4 item_img">
                        <img src="~/images/editFunc.png" class="img-responsive">
                    </div>
                    <div class="col-md-8 item_content">
                        <form method="post">
                            <h4>
                                <span>Atualize os dados do funcionário !!!</span>
                            </h4>
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="panel">
                                            <div class="panel-body">
                                                <div class="col-md-12" style="margin-top:15px;">
                                                    <input asp-for="funcionario.FuncionarioId" type="hidden" />
                                                    <label asp-for="funcionario.Nome" style="font-weight:bold;"></label>
                                                    <input type='text' class='form-control' asp-for="funcionario.Nome" />
                                                    <span class="alert-danger" asp-validation-for="funcionario.Nome"></span>
                                                </div>
                                                <div class="col-md-12" style="margin-top:15px;">
                                                    <label asp-for="funcionario.Cidade" style="font-weight:bold;"></label>
                                                    <input type='text' class='form-control' asp-for="funcionario.Cidade" />
                                                    <span class="alert-danger" asp-validation-for="funcionario.Cidade"></span>
                                                </div>
                                                <div class="col-md-12" style="margin-top:15px;">
                                                    <label asp-for="funcionario.Departamento" style="font-weight:bold;"></label>
                                                    <input type='text' class='form-control' asp-for="funcionario.Departamento" />
                                                    <span class="alert-danger" asp-validation-for="funcionario.Departamento"></span>
                                                </div>
                                                <div class="col-md-12" style="margin-top:15px;">
                                                    <label asp-for="funcionario.Sexo" style="font-weight:bold;"></label>
                                                    <input type='text' class='form-control' asp-for="funcionario.Sexo" />
                                                    <span class="alert-danger" asp-validation-for="funcionario.Sexo"></span>
                                                </div>
                                                <div class="col-md-12" style="margin-top:15px;">
                                                    <label asp-for="funcionario.Salario" style="font-weight:bold;"></label>
                                                    <input type='text' class='form-control' asp-for="funcionario.Salario" />
                                                    <span class="alert-danger" asp-validation-for="funcionario.Salario"></span>
                                                </div>
                                                <div class="text-center col-md-12" style="margin-top:35px;">
                                                    <button class="btn btn-primary btn-sx" type="submit">
                                                        <i class="glyphicon glyphicon-edit"></i> Editar Funcionário
                                                    </button>
                                                    <a class="btn btn-success btn-sx" asp-page="/Funcionario/Index">
                                                        <i class="glyphicon glyphicon-backward"></i> Lista De Funcionários
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>